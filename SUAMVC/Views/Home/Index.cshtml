@model SUAMVC.Models.UsuarioModel
@using System.Web.Optimization;
@{
    ViewBag.Title = Language.Home_Title;
    Layout = "~/Views/Shared/_Layout_sec.cshtml";
    var message = TempData["CustomError"];
}
@using (Html.BeginForm("Login", "Usuarios", FormMethod.Post))
{
    <div class="container" style="margin-left:250px;">
        @Html.ValidationSummary(true, Language.failed_login)
        
        <div id="loginbox" style="margin-top:50px; margin-bottom:150px;" 
             class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                @Html.TextBoxFor(u => u.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.UserName)
            </div>
            <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Password)
            </div>
            <div style="margin-top:10px" class="form-group">
                <!-- Button -->
                <div class="col-sm-12 controls">
                    <input class="btn btn-success" type="submit" value="@Language.bt_login" />
                    @Html.ActionLink(Language.bt_cancel, "Index", "Home", null, new { @class = "btn btn-danger" })
                    @if (TempData["CustomError"] != null)
                    {
                        <p style="color:#ff0000; font-weight:bold; margin-top:15px;">@message</p>
                    }
                </div>
            </div>
        </div>
    </div>
}



